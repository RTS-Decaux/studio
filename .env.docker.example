# Docker Environment Variables Example
# Copy this file to .env for docker-compose

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# AI Provider Configuration
# ============================================
# Choose: 'openai' or 'gemini'
AI_DEFAULT_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Gemini (if using)
GEMINI_API_KEY=your_gemini_api_key

# ============================================
# Studio Configuration (fal.ai)
# ============================================
FAL_API_KEY=your_fal_api_key

# ============================================
# Optional: Redis for resumable streams
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Optional: PostgreSQL (if using local Supabase)
# ============================================
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# ============================================
# Application URL
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
